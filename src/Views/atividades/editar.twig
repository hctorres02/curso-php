{% extends "base.twig" %}

{% block main %}
<hgroup role="heading">
    <h3>Editar atividade</h3>
</hgroup>
<nav>
    <ul>
        <li>
            <a href="{{ url('/atividades') }}">&larr; Voltar para listagem</a>
        </li>
    </ul>
    <ul>
        <li>{% include "atividades/excluir.twig" %}</li>
    </ul>
</nav>
<form action="{{ url('/atividades/{id}', {id: atividade.id}) }}" method="post">
    {% include "atividades/fieldset.twig" %}
    <input type="hidden" name="_method" value="put">
    <input type="hidden" name="_csrf_token" value="{{ CSRF_TOKEN }}" />
    <input type="submit" value="&#128190; Salvar">
</form>
{% endblock %}